<h1>Корзина</h1>

{% if cartArray is defined %}

    <table class="cartTable">
        <tr>
            <td>Название</td>
            <td>Количество</td>
            <td>Цена</td>
            <td>Сумма</td>
        </tr>

        {% for product in cartArray %}
            {% if product is iterable %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.price }} руб.</td>
                    <td>{{ product.sum }} руб.</td>
                    <td>
                        <form action=""><input type="submit" value="Удалить" name="{{ product.id }}"></form>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    </table>

    <h3>Сумма к оплате: {{ cartArray[0] }} руб.</h3>
    <form action=""><input type="submit" value="Заказать" name="button"></form>

{% else %}
    Корзина пуста

{% endif %}
